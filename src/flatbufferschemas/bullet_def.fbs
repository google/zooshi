include "common.fbs";

namespace fpl;

// Types that a physics rigid body can be.
// Note that it is defined as a bit field.
enum BulletCollisionType : byte {
  None = 0,
  Raycast = 1,
  Projectile = 2,
  Patron = 4,
  Ground = 8,
  End  // Not to be used as a type itself, needed for iteration.
}

table BulletNoShapeDef {
}

table BulletSphereDef {
  radius:float;
}

table BulletBoxDef {
  half_extents:Vec3;
}

table BulletCylinderDef {
  half_extents:Vec3;
}

table BulletCapsuleDef {
  radius:float;
  height:float;
}

table BulletConeDef {
  radius:float;
  height:float;
}

table BulletStaticPlaneDef {
  normal:Vec3;
  constant:float;
}

union BulletShapeUnion {
  BulletNoShapeDef,
  BulletSphereDef,
  BulletBoxDef,
  BulletCylinderDef,
  BulletCapsuleDef,
  BulletConeDef,
  BulletStaticPlaneDef
}

table BulletShapeDef {
  data:BulletShapeUnion;
  offset:Vec3;
  mass:float = 1;
  restitution:float;
  collision_type:BulletCollisionType;
  collides_with:[BulletCollisionType];
}
